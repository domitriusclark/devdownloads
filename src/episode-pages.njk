---
pagination:
    data: episodes
    size: 1
    alias: episode
permalink: "episodes/{{ episode.name | slug }}/"
layout: layouts/base.njk
---

<div class="w-full flex flex-col-reverse sm:flex-row justify-between h-[420px] mx-auto mt-24 font-black">
    <div class="h-full flex flex-col justify-between  p-6 ">
      <div class="w-full">
        <p class="text-2xl md:text-3xl xl:text-4xl 2xl:text-5xl 3xl:text-6xl font-dark">{{ episode.topic }}</p>
        <p class="mt-3 text-orange capitalize">{{ episode.when }}</p>
      </div>
      <div class="mt-6">
        <p>Hosted By Domitrius Clark</p>
        <p class="text-discord-blue">discord.gg/jamstack</p>
      </div>
    </div>
    <div class="h-full w-full flex flex-col items-end pr-10 lg:pr-24 xl:pr-10">
      <img class="rounded-full w-[45%]" src="{{ episode.photo | removeTrailingSlash }}"/>
      <h1 class="bg-pink text-xl 3xl:text-3xl px-4 lg:px-16 xl:px-4 2xl:px-16 3xl:px-18 py-2 lg:py-5 xl:py-3 mt-[-32px]">{{ episode.name }}</h1>
      <p class="font-medium leading-10 mr-4 3xl:mr-0">{{ episode.title }}</p>
      <p class="text-green-accent mr-4 3xl:mr-0">{{episode.twitter}}</p>
    </div>
</div>