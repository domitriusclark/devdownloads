---
title: Homepage
layout: layouts/base.njk
---

{% for episode in episodes %}
  {% if episode.up_next === true %}
    {# MOBILE #}
    <div class="rounded-2xl block sm:hidden w-full mx-auto h-auto p-[6px] mt-32">
      <div class="flex flex-col space-around h-full bg-gradient-pink-orange text-white rounded-2xl p-7">
        <img class="rounded-full self-center mt-[-92px] w-[200px] h-[200px]" src="{{ episode.photo | removeTrailingSlash }}"/>
        <h2 class='bg-primary-blue text-center mt-[-32px] rounded-md py-3'>{{ episode.name }}</h2>
        <span class="mt-4">
          <p class="font-medium text-md">{{ episode.title }}</p>
          <p class="text-green-accent">{{episode.twitter}}</p>
        </span>
        <p class="font-black text-2xl mt-8">{{ episode.topic }}</p>
        <p class="mt-8 justify-self-end">{{episode.when}}</p>
      </div>
    </div>
    {# TABLET AND UP #}
    <div class="rounded-xl hidden md:block w-full lg:min-w-[700px] h-[540px] 3xl:h-[640px] mx-auto bg-border-gradient-pink-orange p-[24px] mt-12 overflow-hidden font-black">
      <div class="wrapper">
        <div class="left flex-col">
          <img class="w-[40%] mb-3" src="/img/dd_logo_2.png"/>
          <div class="w-[30%]">
            <p class="text-2xl font-dark">Collaboration between devs and designers + having fun with CSS</p>
            <p class="mt-3 text-orange capitalize">{{ episode.when }}</p>
          </div>
          <div class="mt-6">
            <p>Hosted By Domitrius Clark</p>
            <p class="text-discord-blue">discord.gg/jamstack</p>
          </div>
        </div>
        <div class="right flex-col">
          <img class="rounded-full w-[30%]" src="{{ episode.photo | removeTrailingSlash }}"/>
          <h1 class="bg-pink px-16 py-5 mt-[-32px]">{{ episode.name }}</h1>
          <p class="font-medium leading-10 mr-4">{{ episode.title }}</p>
          <p class="text-green-accent mr-4">{{episode.twitter}}</p>
        </div>
      </div>
    </div>

  {% endif %}
{% endfor %}

<h1 class="text-2xl text-center my-20">Previous Episodes</h1>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-y-20 gap-x-3">
  {% for episode in episodes %}
    {% if episode.up_next === false %}
      <div class="rounded-2xl w-full mx-auto h-auto hover:bg-gradient-to-r from-pink to-orange p-[6px] mt-20">
        <div class="flex flex-col space-around h-full bg-gradient-blue-purple text-white rounded-2xl p-7">
          <img class="rounded-full self-center mt-[-92px] w-[200px] h-[200px]" src="{{ episode.photo | removeTrailingSlash }}"/>
          <h2 class='bg-primary-blue text-center mt-[-32px] rounded-md py-3'>{{ episode.name }}</h2>
          <span class="mt-4">
            <p class="font-medium text-md">{{ episode.title }}</p>
            <p class="text-green-accent">{{episode.twitter}}</p>
          </span>
          <p class="font-black text-2xl mt-8">{{ episode.topic }}</p>
          <p class="mt-8 justify-self-end">{{episode.when}}</p>
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>